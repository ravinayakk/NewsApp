<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Pages.NewsDetailPage"
             Title="News Details">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Image x:Name="NewsImage" HeightRequest="250" Aspect="AspectFill"/>
            <Label x:Name="NewsTitle" FontSize="Large" FontAttributes="Bold" Margin="10"/>
            <Label x:Name="NewsContent" FontSize="Medium"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
